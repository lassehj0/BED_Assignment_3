@page
@model Assignment3.Pages.ReceptionModel
@{

	ViewData["Title"] = "Reception";
}
<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>
<div class="text-center">
	<h1 class="display-4">Reception</h1>
	<p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<form method="post" asp-page="Reception">
	<div asp-validation-summary="ModelOnly" class="text-danger"></div>

	<div class="form-group">
		<label asp-for="TBookings.TotalAdults">Total Adults</label>
		<input type="text" class="form-control" id="TotalAdults" name="TotalAdults" placeholder="Enter Total Adults">
		<small id="TotalAdults" class="form-text text-muted">Please enter the total number of adults eating at this breakfast</small>
		<span asp-validation-for="TBookings.TotalAdults" class="text-danger"></span>

	</div>
	

	<div class="form-group">
		<label asp-for="TBookings.TotalChildren">Children</label>
		<input type="text" class="form-control" id="TotalChildren" name="TotalChildren" placeholder="Enter Total Children">
		<small id="Children" class="form-text text-muted">Please enter the total number of children eating at this breakfast</small>
		<span asp-validation-for="TBookings.TotalChildren" class="text-danger"></span>


	</div>
	
	<div>
		<label asp-for="TBookings.Date.Date"></label>
		<input type="date" class="form-control" id="Date" name="Date" placeholder="Enter Date">
		<small id="Date" class="form-text text-muted">Please enter the date of the breakfast</small>
		<span asp-validation-for="TBookings.Date.Date" class="text-danger"></span>

		
	</div>

	<button type="submit" class="btn btn-primary">Submit</button>
</form>

		
<table class="table">
	<thead>
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.CheckIn[0].RoomNumber)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.CheckIn[0].Adults)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.CheckIn[0].Children)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.CheckIn[0].Date)
		</th>
		<th></th>
	</tr>
	</thead>
	<tbody>
	@foreach (var item in Model.CheckIn) {
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.RoomNumber)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Adults)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Children)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Date)
			</td>
			<td>
				<a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
				<a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
				<a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
			</td>
		</tr>
	}
	</tbody>
</table>
