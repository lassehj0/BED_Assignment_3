@page
@model Assignment3.Pages.WaiterModel
@{
	ViewData["Title"] = "Waiter";
}
<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>

<script src="https://unpkg.com/@microsoft/signalr@3.0.1/dist/browser/signalr.js" crossorigin="anonymous"></script>
<script>
    var connection = new signalR.HubConnectionBuilder().withUrl("/DataHub").build();

    connection.on("", function (expense) {
        var li = document.createElement("li");
        li.textContent = expense;
        document.getElementById("ExpensesList").appendChild(li);
    });

    connection.start().then(function () {
    }).catch(function (err) {
        console.error(err.toString());
    });
</script>
<div class="text-center">
	<h1 class="display-4">Waiter</h1>
	<p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>



<form method="post" asp-page="Waiter">
	<div asp-validation-summary="ModelOnly" class="text-danger"></div>

	<div class="form-group">
		<label asp-for="CheckIn.RoomNumber">Room Number</label>
		<input type="text" class="form-control" id="RoomNumber" name="RoomNumber" placeholder="Enter Room Number">
		<small id="RoomNumber" class="form-text text-muted">Please enter the Room Number</small>
		<span asp-validation-for="CheckIn.RoomNumber" class="text-danger"></span>

	</div>

	<div class="form-group">
		<label asp-for="CheckIn.Adults">Adults</label>
		<input type="text" class="form-control" id="Adults" name="Adults" placeholder="Enter Adults">
		<small id="Adults" class="form-text text-muted">Please enter the Number of Adults</small>
		<span asp-validation-for="CheckIn.Adults" class="text-danger"></span>
	</div>

	<div class="form-group">
		<label asp-for="CheckIn.Children">Children</label>
		<input type="text" class="form-control" id="Children" name="Children" placeholder="Enter Children">
		<small id="Children" class="form-text text-muted">Please enter the Number of Children</small>
		<span asp-validation-for="CheckIn.Children" class="text-danger"></span>


	</div>

	<button type="submit" class="btn btn-primary">Submit</button>

</form>